@model WebAirport.Models.Position

@{
    ViewBag.Title = "Новая должность";
}
<div>
    @Html.ActionLink("Список должностей", "Index")
</div>

@Html.ValidationSummary(true)

<h2>Данные для добавления новой должности</h2>
<form method="post">
    <table>
        <tr>
            <td>
                Название должности
            </td>
            <td>
                @Html.EditorFor(model => model.JobTitle)
                @Html.ValidationMessageFor(model => model.JobTitle)
            </td>
        </tr>
        <tr>
            <td>
                Оклад
            </td>
            <td>
                @Html.EditorFor(model => model.Salary)
                @Html.ValidationMessageFor(model =>model.Salary)
            </td>
        </tr>
        <tr>
            <td>
                Обязанности
            </td>
            <td>
                @Html.EditorFor(model => model.Responsibilities)
                @Html.ValidationMessageFor(model => model.Responsibilities)
            </td>
        </tr>
        <tr>
            <td>
                Требования
            </td>
            <td>
                @Html.EditorFor(model => model.Requirements)
                @Html.ValidationMessageFor(model => model.Requirements)
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Добавить" />
            </td>
        </tr>
    </table>
</form>


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
