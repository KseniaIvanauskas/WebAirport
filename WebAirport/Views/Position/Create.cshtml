@model WebAirport.Models.CodeFirst.Position

@{
    ViewBag.Title = "Новая должность";
}
<div>
    @Html.ActionLink("Список должностей", "Index")
</div>



<h2>Данные для добавления новой должности</h2>
<div class="row">
    <div class="col-md-8">
        @Html.ValidationSummary(true)
        <form method="post">
            <table class="table table-bordered">
                <tr>
                    <th>
                        Название должности
                    </th>
                    <td>
                        @Html.EditorFor(model => model.JobTitle)
                        @Html.ValidationMessageFor(model => model.JobTitle)
                    </td>
                </tr>
                <tr>
                    <th>
                        Оклад
                    </th>
                    <td>
                        @Html.EditorFor(model => model.Salary)
                        @Html.ValidationMessageFor(model => model.Salary)
                    </td>
                </tr>
                <tr>
                    <th>
                        Обязанности
                    </th>
                    <td>
                        @Html.EditorFor(model => model.Responsibilities)
                        @Html.ValidationMessageFor(model => model.Responsibilities)
                    </td>
                </tr>
                <tr>
                    <th>
                        Требования
                    </th>
                    <td>
                        @Html.EditorFor(model => model.Requirements)
                        @Html.ValidationMessageFor(model => model.Requirements)
                    </td>
                </tr>
            </table>
            <input type="submit" value="Добавить" />
        </form>
    </div>
</div>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
