@model PagedList.IPagedList<WebAirport.Models.Staff>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Список сотрудников";
}

<div>
    @Html.ActionLink("Добавить сотрудника", "Create")
</div>
<h2>Список всех сотрудников</h2>
<div>
    <table>
        <tr>
            <td><p>Фамилия Имя</p></td>
            <td><p>Отчество</p></td>
            <td><p>Пол</p></td>
            <td><p>Адресс</p></td>
            <td><p>Телефон</p></td>
            <td><p>Пасспорт</p></td>
            <td><p>Должность</p></td>
        </tr>
        @foreach (var s in Model)
        {
            <tr>
                <td><p>@s.FirstNameStaff</p></td>
                <td><p>@s.LastNameStaff</p></td>
                <td><p>@s.Gender</p></td>
                <td><p>@s.Address</p></td>
                <td><p>@s.Telephone</p></td>
                <td><p>@s.Passport</p></td>
                <td><p>@s.Position.JobTitle</p></td>
                <td>@Html.ActionLink("Редактировать", "Edit", new { s.Id })</td>
            </tr>
        }
    </table>
</div>
<br />
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

